<div class="container gray-background">
  <h2 class="text-center">Exhibitions</h1>

      <!-- Nav tabs -->
      <ul class="nav nav-pills gray centered" role="tablist">
        <li role="presentation" class="active"><a href="#current" aria-controls="home" role="tab" data-toggle="tab">Current & Upcoming</a></li>
        <li role="presentation"><a href="#past" aria-controls="profile" role="tab" data-toggle="tab">Past</a></li>
      </ul>
      <br>
      <br>

<!-- Tab panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="current">
  <% if @upcoming_exhibitions.any? %>
    <% @upcoming_exhibitions.each do |exhibition| %>
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <%= image_tag(exhibition.exhibition_thumbnail.url(:small), class: "img-responsive", width: "100%") %>
        </div>
        <div class="col-md-6">
          <p class="date">
            <% if exhibition.end_date > Date.today + 4.month %>
              Ongoing
            <% else %> 
              <%= exhibition.start_date.try(:strftime, "%B %e") %> - <%= exhibition.end_date.try(:strftime, "%B %e, %Y") %>
            <% end %>
          </p>
          <h3><%= link_to exhibition.title, exhibition %><br></h3>
          <p><%= truncate exhibition.description, length: 675 %></p>
          <p><%= link_to 'More About Exhibition', exhibition, class: "btn btn-primary" %>
        </div>
      </div>
      <hr>
    <% end %>
  <% else %> 
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
      </div>
      <div class="col-md-6">
         <p>There are no scheduled exhibitions at this time.</p>
      </div>
    </div>
  <% end %>

</div>
<div role="tabpanel" class="tab-pane" id="past">
  <% if @past_exhibitions.any? %>
    <% @past_exhibitions.each do |exhibition| %>
      <div class="row">
        <div class="col-md-5">
          <%= image_tag(exhibition.exhibition_thumbnail.url(:small), class: "img-responsive", width: "100%") %>
        </div>
        <div class="col-md-7">
          <p><%= exhibition.start_date.try(:strftime, "%B %e") %> - 
          <%= exhibition.end_date.try(:strftime, "%B %e, %Y") %></p>
          <h3><%= link_to exhibition.title, exhibition %><br></h3>
          <p><%= truncate exhibition.description, length: 675 %></p>
          <p><%= link_to 'More About Exhibition', exhibition, class: "btn btn-primary" %>
        </div>
      </div>
      <hr>
    <% end %>
  <% else %>
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
      </div>
      <div class="col-md-6">
         <p>There are no past exhibitions.</p>
         <br>
         <br>
         <br>
         <br>
         <br>
         <br>
         <br>
         <br>
         <br>
         <br>
      </div>
    </div>
  <% end %>
</div>

</div>
</div>

