<!-- Carousel of Upcoming Events -->
<div class="events-background">
  <div class="container events-container">
    <h1>Current & Upcoming Events</h1>
    <div class="container events-scroll">

      <div id="myCarousel" class="carousel slide" data-interval="false" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% @events.each_with_index do |event, index| %>
            <div class="item <%= index == 0 ? 'active' : '' %>">
            <div class="row events-row">
              <div class="col-xs-12 col-md-6 col-sm-6 events-image">
                <% if event.event_thumbnail.present? %>
                <%= link_to image_tag(event.event_thumbnail.url(:medium), class: "img-responsive pull-right"), event %>
                <% else %>
                <%= link_to image_tag(event.exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive pull-right"), event %>
              <% end %>
              </div>
              <div class="col-xs-12 col-sm-6 col-md-6 events-info">
                <div class="row">
                  <div class="col-md-6 no-padding-left">
                    <p class="events-date"><%= event.start_date.try(:strftime, "%A, %b %e, %Y") %></p>
                    <p class="events-time"><%= event.start_time.try(:strftime, "%l:%M %p") %> - <%= event.end_time.try(:strftime, "%l:%M %p") %></p>
                  </div>
                  <div class="col-md-6 no-padding-right">
                    <%= link_to image_tag('2nd-fridays-link.jpg', height: '100', alt: '2nd Fridays'), events_path, title: '2nd Fridays', title: '2nd Fridays', rel: 'tooltip', relative: true, class: "pull-right" %>
                  </div> 
                </div>
                <div class="row">
                  <br>
                  <h3 class="events-name"><%= link_to event.title, event %><% if event.exhibition %>
                    <span class="small-text">for</span> 
                      <%= link_to event.exhibition.title, event.exhibition %>
                    <% end %></h3>
                  <p class="events-text"><%= truncate event.description, length: 400 %></p>
                  
                 <p><%= link_to 'About the Event', event, class: "btn btn-primary" %>
                 <% if event.exhibition %>
                   <%= link_to 'About the Exhibition', event.exhibition, class: "btn btn-primary-outline" %></p>
                  <% end %>
                </div>
                <div class="row gallery-info">
                  <% if event.exhibition %>
                    <h6 class="gallery-name"><%= link_to event.exhibition.gallery.try(:gallery_name), event.exhibition.gallery %></h6>
                    <p class="gallery-address">
                      <%= event.exhibition.gallery.address %><br>
                      <%= event.exhibition.gallery.city %>, <%= event.exhibition.gallery.state %> <%= event.exhibition.gallery.zip %></p>
                    <% end %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <% if @events.count > 1 %>
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        <% end %>
      </div><!-- End Carousel -->
    </div>
      <p class="text-center"><%= link_to "View All Events", events_path, class: "btn btn-primary btn-lg" %></p>
    </div>
  </div>
</div>
<!-- End Carousel of Upcoming Exhibitions -->

        


