<div class="container">
  <hr>
    <div class="row">
      <div class="col-md-6 col-xs-6-push">
        <div id="myCarousel-events" class="carousel slide" data-interval="false" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="myCarousel-events" data-slide-to="0" class="active"></li>
            <li data-target="myCarousel-events" data-slide-to="1"></li>
            <li data-target="myCarousel-events" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <% if @event.event_thumbnail.present? %>
                <%= image_tag(@event.event_thumbnail.url(:medium), class: "img-responsive same-size-img") %>
              <% else %>
                <%= link_to image_tag(@event.exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive margin border"), @event %>
              <% end %>
            </div>
            <div class="item">
              <%= image_tag(@event.event_thumbnail.url(:medium), class: "img-responsive same-size-img") %>
            </div>
            <div class="item">
             <%= image_tag(@event.event_thumbnail.url(:medium), class: "img-responsive same-size-img") %>
            </div>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel-events" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel-events" role="button" data-slide="next">
            <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div><!-- End Carousel -->
      </div><!-- End col-sm-6 -->
      <% if @event.exhibition %>
        <div class="col-md-6 col-xs-6-pull event-show-info">
          <p class="page-title">EVENT</p><br>
          <h2><%= link_to @event.exhibition.try(:title), @event.exhibition %>: <%= @event.title %></h2>
          <br>
            <p class="date-info"><%= @event.start_date.try(:strftime, "%A, %B %e, %Y") %>
            <% if @event.end_date > @event.start_date %>
              - <%= @event.end_date.try(:strftime, "%B %e, %Y") %>
            <% end %>
         <br><%= @event.start_time.try(:strftime, "%l:%M %p") %> - <%= @event.end_time.try(:strftime, "%l:%M %p") %></p>
         <br>
          <h4><%= link_to @event.exhibition.gallery.try(:gallery_name), @event.exhibition.gallery %><br>
          <%= @event.exhibition.gallery.try(:address) %></h4>
          <br><br>
          <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">About the Exhibition</a></li>
              <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Event Details</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="home">
                <p><%= @event.exhibition.description %></p>
              </div>
              <div role="tabpanel" class="tab-pane" id="profile">
                <p><%= markdown(@event.description) %></p>
              </div>
            </div>
          </div>
          
        </div>
      </div><!-- End Row -->
      <% else %>
      <div class="col-md-6 col-xs-6-pull event-show-info">
          <p class="page-title">EVENT</p><br>
          <h2><%= @event.title %></h2>
            <p class="date-info"><%= @event.start_date.try(:strftime, "%A, %B %e, %Y") %>
            
              - <%= @event.end_date.try(:strftime, "%B %e, %Y") %>
            
         <br><%= @event.start_time.try(:strftime, "%l:%M %p") %> - <%= @event.end_time.try(:strftime, "%l:%M %p") %></p>
          <br>
          <br>
          <h4>Event Description</h4>
          <p><%= markdown(@event.description) %></p>
          <br>
        </div>
      </div><!-- End Row -->

<% if @event.galleries.any? %>
              
            <% end %>

        <!-- Third Container (Grid) -->
        <div class = "container">
        <div class="row">
            <h3 class="page-title">Participating Galleries</h3>
            
            <br>
            <hr>
            <% @galleries.each do |gallery| %>
            <div class="col-xs-4 col-sm-2">
              <div class="image-container">
                <%= image_tag(gallery.thumbnail.url(:medium), class: "img-responsive same-size-img") %>
                <div class="overlay">
                  <h6 class="text-overlay"><%= link_to gallery.gallery_name, gallery %></h6>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>

        <% end %>
      <br>
    <% if admin_signed_in? %>
      <%= button_to 'Add Gallery', participation_event_path(@event.id), :method => "post" %>
    <% end %>
      <br>
    <p class="text-center">
      <% if admin_signed_in? %>
        <%= link_to 'Edit', edit_event_path,class: "btn btn-warning" %>
      <% end %>
        <%= link_to 'All Events', events_path, class: "btn btn-primary"  %>
      <% if admin_signed_in? %>
        <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <% end %>
    </p>
    <br>
    <br>
</div>
