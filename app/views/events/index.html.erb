<% content_for(:title, 'Events')%>
<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
<br>
<br>
<br>
<div class="container">
  <h2 class="page-title">Events</h2><br>
  <hr>
  <div class="btn-group" role="group" aria-label="...">
    <%= link_to "Upcoming", events_path(:upcoming => "Upcoming"), class: "btn btn-default" %>
    <%= link_to "Past", events_path(:past => "Past"), class: "btn btn-default" %>
  </div>
</div>

<br>
<br>

<div class="container bg-3">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-sm-4 col-md-3">
        <div class="thumbnail thumbnail-events">
          <% if event.event_thumbnail.present? %>
            <%= link_to image_tag(event.event_thumbnail.url(:medium), class: "img-responsive margin border"), event %>
          <% else %>
            <%= link_to image_tag(event.exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive margin border"), event %>
          <% end %>
          <div class="caption">
            <div class="events-text1">
              <span><%= link_to event.title, event %></br></span>
              <% if event.exhibition %>
                <p class="exhibition-name"><%= link_to event.exhibition.try(:title), event.exhibition %></p>
              <% end %>
            </div>
          
            <div class="events-text2">
              <span class="events-date"><%= event.start_date.try(:strftime, "%A, %B %e, %Y") %></span>
              <p class="events-time"><%= event.start_time.try(:strftime, "%l:%M %p") %> - <%= event.end_time.try(:strftime, "%l:%M %p") %></p> 
              <% if event.exhibition %>
                <p class="gallery-name"><%= link_to event.exhibition.gallery.try(:gallery_name), event.exhibition.gallery %></p>
                <% else %>
                 .    
              <% end %>      
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        document.getElementById("myBtn").style.display = "block";
    } else {
        document.getElementById("myBtn").style.display = "none";
    }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
}
</script>


