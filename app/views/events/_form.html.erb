<%= form_for([@event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_field :start_time, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_field :end_time, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :date_info %><br>
    <%= f.text_area :date_info %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :event_thumbnail %><br />
    <%= f.file_field :event_thumbnail %>
  </div>
   <div class="field">
    <%= f.label :event_type %><br>
    <%= f.select :event_type, ['Series', 'Single', 'Participation'] %>
  </div>
  <div class="field">
    <%= f.label :exhibition_id, "Exhibition ID" %><br>
    <%= f.text_field :exhibition_id %>
  </div>
  <div>
    <%= collection_check_boxes(:gallery, :gallery_ids, Gallery.all, :id, :gallery_name) %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
