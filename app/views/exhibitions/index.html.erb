<% content_for(:title, 'Exhibitions')%>
<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
<br>
<br>
<br>
<div class="container">
  <h2 class="page-title">Exhibitions</h2>
  <hr>
  <!-- Nav tabs -->
    <ul class="nav nav-pills gray" role="tablist">
      <li role="presentation" class="active"><a href="#current" aria-controls="home" role="tab" data-toggle="tab">Current</a></li>
      <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Upcoming</a></li>
      <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Past</a></li>
    </ul>
  <br>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="current">
      <!-- Third Container (Grid) -->
      <div class="container bg-3">
        <div class="row">
          <% if @current_exhibitions.any? %>
            <% @current_exhibitions.each do |exhibition| %>
              <div class="col-sm-4 col-md-3">
                <div class="thumbnail thumbnail-exhibitions">
                  <%= link_to image_tag(exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive margin border"), exhibition %>
                  <div class="caption">
                    <div class="exhibitions-text1">
                      <p class="exhibitions-name"><%= link_to exhibition.title, exhibition %></p>
                    </div>
                    <div class="exhibitions-text2">
                      <p class="exhibitions-date">  
                      <% if exhibition.end_date > Date.today + 4.month %>
                        Ongoing
                      <% elsif exhibition.end_date > Date.today && exhibition.start_date < Date.today %>
                        Through <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %>
                        <% elsif %>
                        <%= exhibition.start_date.try(:strftime, "%b %e, %Y") %> - <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %>
                        <% end %>
                        </p>

                      <p class="gallery-name"><%= link_to exhibition.gallery.try(:gallery_name), exhibition.gallery %></p>
                      <p class="gallery-address"><%= exhibition.gallery.try(:address) %><br>
                        <%= exhibition.gallery.try(:city) %>, <%= exhibition.gallery.try(:state) %> <%= exhibition.gallery.try(:zip) %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %> 
            <p>There are no current exhibitions at this time.</p>
          <% end %>
        </div>
      </div>
    </div><!-- end tab panel -->
    <div role="tabpanel" class="tab-pane" id="profile">
      <!-- Third Container (Grid) -->
      <div class="container bg-3">
        <div class="row">
          <% if @upcoming_exhibitions.any? %>
            <% @upcoming_exhibitions.each do |exhibition| %>
              <div class="col-md-3 col-sm-4">
                <div class="thumbnail thumbnail-exhibitions">
                  <%= link_to image_tag(exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive margin border"), exhibition %>
                  <div class="caption exhibitions-text">
                    <h5 class="exhibitions-name"><%= link_to exhibition.title, exhibition %></h5>

                    <p class="exhibitions-date">  
                    <% if exhibition.end_date > Date.today + 4.month %>
                      Ongoing
                    <% elsif exhibition.end_date > Date.today && exhibition.start_date < Date.today %>
                      Through <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %>
                      <% elsif %>
                      <%= exhibition.start_date.try(:strftime, "%b %e, %Y") %> - <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %>
                      <% end %>
                      </p>

                    <p class="gallery-name"><%= link_to exhibition.gallery.try(:gallery_name), exhibition.gallery %></h6>
                    <p class="gallery-address"><%= exhibition.gallery.try(:address) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %> 
            <p>There are no upcoming exhibitions at this time.</p>
          <% end %>
        </div>
      </div>
    </div><!-- end tab panel -->
    <div role="tabpanel" class="tab-pane" id="messages">
      <!-- Third Container (Grid) -->
      <div class="container bg-3">
        <div class="row">
          <% @past_exhibitions.each do |exhibition| %>
            <div class="col-md-3 col-sm-4">
              <div class="thumbnail thumbnail-exhibitions">
                <%= link_to image_tag(exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive margin border"), exhibition %>
                <div class="caption">
                  <div class="exhibitions-text1">
                    <h5 class="exhibitions-name"><%= link_to exhibition.title, exhibition %></h5>
                  </div>
                  <div class="exhibitions-text2">
                    <p class="exhibitions-date">  
                    <% if exhibition.end_date > Date.today + 4.month %>
                      Ongoing
                    <% elsif exhibition.end_date > Date.today && exhibition.start_date < Date.today %>
                      Through <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %>
                      <% elsif %>
                      <%= exhibition.start_date.try(:strftime, "%b %e, %Y") %> - <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %>
                      <% end %>
                      </p>

                    <p class="gallery-name"><%= link_to exhibition.gallery.try(:gallery_name), exhibition.gallery %></p>
                    <p class="gallery-address"><%= exhibition.gallery.try(:address) %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- end tab panel -->
  </div><!-- end tab content -->

<br>
<br>
<br>
<p class="text-center">
    <% if admin_signed_in? %>
      <%= link_to 'Create New Exhibition', galleries_url, class: "btn btn-warning" %>
    <% end %>
  </p>
</div>

<script>
// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        document.getElementById("myBtn").style.display = "block";
    } else {
        document.getElementById("myBtn").style.display = "none";
    }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
}
</script>

