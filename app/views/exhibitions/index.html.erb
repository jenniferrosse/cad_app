<% content_for(:title, 'Exhibitions')%>
<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
<br>
<br>
<br>
<div class="container">
  <h2 class="page-title">Exhibitions</h2><br>
  <hr>
  <div class="btn-group" role="group" aria-label="...">
    <%= link_to 'Current', exhibitions_path(current_exhibitions: true), class: "btn btn-default" %>
    <%= link_to 'Upcoming', exhibitions_path(upcoming_exhibitions: true), class: "btn btn-default" %>
    <%= link_to 'Past', exhibitions_path(past_exhibitions: true), class: "btn btn-default" %>
    <%= link_to 'All', exhibitions_path, class: "btn btn-default" %>
  </div>
</div>

<br>
<br>
<!-- Third Container (Grid) -->
<div class="container bg-3">
  <div class="row">
    <% @exhibitions.each do |exhibition| %>
      <div class="col-sm-3">
        <div class="thumbnail thumbnail-exhibitions">
          <%= link_to image_tag(exhibition.exhibition_thumbnail.url(:medium), class: "img-responsive margin border"), exhibition %>
          <div class="caption exhibitions-text">
            <h5 class="exhibitions-name"><%= link_to exhibition.title, exhibition %></h5>
            <p class="exhibitions-date"><%= exhibition.start_date.try(:strftime, "%b %e, %Y") %> - <%= exhibition.end_date.try(:strftime, "%b %e, %Y") %></p>
            <h6 class="gallery-name">Design Project</h6>
            <p class="gallery-address">1932 S. Halsted St. #509<br>
            Chicago, IL 60608</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<p class="text-center">
    <% if admin_signed_in? %>
      <%= link_to 'New Exhibition', new_exhibition_path, class: "btn btn-default" %>
    <% end %>
  </p>
</div>

<script>
// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        document.getElementById("myBtn").style.display = "block";
    } else {
        document.getElementById("myBtn").style.display = "none";
    }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
}
</script>

